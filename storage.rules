rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Publicly readable job images; writes require auth
    match /jobs/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Avatars path: avatars/{userId}/...
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

